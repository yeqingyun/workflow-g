<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gionee.gniflow.integration.dao.TeamActivitiesDetailDao">
  
  <sql id="columns">
    ID_, DEPARTMENT, NAME, ENTRY_DATE, TRAVEL_DATE, PROC_INST_ID_, ACCOUNT, COMPANY,
	STATUS, REMARK, CREATE_BY, CREATE_TIME, UPDATE_BY, UPDATE_TIME
  </sql>

  <resultMap type="com.gionee.gniflow.biz.model.TeamActivitiesDetail" id="result">
	<id property="id" column="ID_"/>
	<result property="department" column="DEPARTMENT"/>
	<result property="name" column="NAME"/>
	<result property="entryDate" column="ENTRY_DATE"/>
	<result property="travelDate" column="TRAVEL_DATE"/>
	<result property="procInstId" column="PROC_INST_ID_"/>
	<result property="account" column="ACCOUNT"/>
	<result property="company" column="COMPANY"/>
	<result property="status" column="STATUS"/>
	<result property="remark" column="REMARK"/>
	<result property="createBy" column="CREATE_BY"/>
	<result property="createTime" column="CREATE_TIME"/>
	<result property="updateBy" column="UPDATE_BY"/>
	<result property="updateTime" column="UPDATE_TIME"/>
  </resultMap>

  <insert id="insert" parameterType="com.gionee.gniflow.biz.model.TeamActivitiesDetail">
    insert into TEAM_ACTIVITIES_DETAIL (<include refid="columns"/>) values (
    #{nextId},
    #{department},
    #{name},
    #{entryDate},
    #{travelDate},
    #{procInstId},
    #{account},
    #{company},
	#{normalStatus},
	#{remark,jdbcType=VARCHAR},
	#{currentAccount},
	#{currentTime},
	#{currentAccount},
	#{currentTime}
    )
  </insert>

  <update id="update" parameterType="com.gionee.gniflow.biz.model.TeamActivitiesDetail">
    update TEAM_ACTIVITIES_DETAIL
    <set>
      <if test="status != null">
        STATUS = #{status},
      </if>
      UPDATE_BY = #{currentAccount},
      UPDATE_TIME = #{currentTime}
    </set>
    where PROC_INST_ID_ = #{procInstId} and ACCOUNT = #{account}
  </update>

  <delete id="delete" parameterType="String">
	delete TEAM_ACTIVITIES_DETAIL where PROC_INST_ID_ = #{procInstId}
  </delete>
  
  <!-- <delete id="delete" parameterType="Integer">
	delete TEAM_ACTIVITIES_DETAIL where ID_ = #{_parameter}
  </delete> -->
  
  <select id="get" parameterType="String" resultMap="result">
	select <include refid="columns"/> from TEAM_ACTIVITIES_DETAIL where  ACCOUNT = #{account} order by CREATE_TIME desc
  </select>
  
  <select id="getAll" parameterType="map" resultMap="result">
	select <include refid="columns"/> from TEAM_ACTIVITIES_DETAIL
	<where>
	  <if test="department != null">
        and DEPARTMENT = #{department}
      </if>
      <if test="name != null">
        and NAME = #{name}
      </if>
      <if test="entryDate != null">
        and ENTRY_DATE = #{entryDate}
      </if>
      <if test="travelDate != null">
        and TRAVEL_DATE = #{travelDate}
      </if>
      <if test="procInstId != null">
        and PROC_INST_ID_ = #{procInstId}
      </if>
      <if test="account != null">
        and ACCOUNT = #{account}
      </if>
      <if test="company != null">
        and COMPANY = #{company}
      </if>
      <if test="remark != null">
        and REMARK = #{remark}
      </if>
      and STATUS = 0
	</where>
  </select>

  <select id="getAllById" parameterType="Integer" resultMap="result">
	select <include refid="columns"/> from TEAM_ACTIVITIES_DETAIL
	where ID_ = #{_parameter}
  </select>

  <select id="getByAccount" parameterType="String" resultMap="result">
	select <include refid="columns"/> from TEAM_ACTIVITIES_DETAIL where  ACCOUNT = #{_parameter} order by TRAVEL_DATE desc
  </select>
</mapper>
